---
import { Icon } from 'astro-icon/components'

interface Member {
  name: string;
  function: string;
  tasks: string[];
  email: string;
  number: string;
  img?: string;
}

interface Props {
  member: Member;
}

const { member } = Astro.props;

const hasImage = member.img != ''
---

<div class="bg-white shadow rounded-lg p-6 w-64">
  <div class="flex items-center space-x-4 mb-4">
   {hasImage && <img src={member.img} class="coat-image w-8" alt="coat of arms">} 
    <div>
      <h3 class="text-lg font-semibold">{member.name}</h3>
      <p class="text-gray-500">{member.function}</p>
    </div>
  </div>
  <div class="space-y-3">
    <div>
      <h4 class="text-sm font-medium text-gray-500 mb-1">Aufgaben:</h4>
      <ul class="list-disc list-inside">
        {member.tasks.map((task: any) => (
          <li class="text-sm">{task}</li>
        ))}
      </ul>
    </div>
    <div class="flex items-center space-x-2">
      <Icon name="mdi:email" class="h-4 w-4 text-gray-400" />
      <span class="text-sm">{member.email}</span>
    </div>
    <div class="flex items-center space-x-2">
      <Icon name="mdi:phone" class="h-4 w-4 text-gray-400" />
      <span class="text-sm">{member.number}</span>
    </div>
  </div>
</div>